<!DOCTYPE html>
<html>
<head>
  <title>RubyTzRsdigital</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!--Bootstrap-->
  <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
